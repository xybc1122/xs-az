<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_white"
    android:fillViewport="true">
        <SurfaceView
            android:id="@+id/sur_player"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_330"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/qmui_config_color_black" />

        <LinearLayout
            android:id="@+id/play_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sur_player"
            android:layout_margin="@dimen/dp_10"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/play_and_stop"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_6"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="center"
                android:src="@mipmap/play" />

            <ImageButton
                android:id="@+id/login_out"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_6"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="center"
                android:src="@mipmap/log_out" />
        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/play_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_6">


            <ImageButton
                android:id="@+id/left"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_below="@+id/up"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/left" />

            <ImageButton
                android:id="@+id/up"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_25"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/up" />

            <ImageButton
                android:id="@+id/right"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_below="@+id/up"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/left"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/right" />


            <ImageButton
                android:id="@+id/down"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_below="@+id/left"
                android:layout_marginLeft="@dimen/dp_26"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/down" />

            <ImageButton
                android:id="@+id/left_u"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toLeftOf="@+id/right_u"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/l_u" />


            <ImageButton
                android:id="@+id/right_u"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/r_u" />


            <ImageButton
                android:id="@+id/left_d"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@+id/right_u"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_toLeftOf="@+id/right_d"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/l_d" />


            <ImageButton
                android:id="@+id/right_d"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@+id/right_u"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/r_d" />

        </RelativeLayout>

</RelativeLayout>
